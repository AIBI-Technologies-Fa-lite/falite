model Verification {
  id Int @id @default(autoincrement())

  verificationTypeId Int
  verificationType   VerificationType @relation(fields: [verificationTypeId], references: [id])

  pincode Int
  address String

  lat  Float?
  long Float?
  phone Int

  caseId Int
  case   CommonData @relation(fields: [caseId], references: [id])

  creRemarks String?
  feRemarks  String?
  distance   Float?

  destinationId Int?
  destination   Coordinates? @relation(fields: [destinationId], references: [id])

  of_id Int
  of    User @relation(fields: [of_id], references: [id])

  documents Document[]

  billable       Boolean @default(false)
  clientBillable Boolean @default(false)
  ofBillable     Boolean @default(false)

  status Status
  final  Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommonData {
  id                Int            @id @default(autoincrement())
  clientName        String
  applicantName     String
  businessName      String?
  coApplicatntName  String?
  caseNumber        String
  status            Status
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  product           String
  supervisorRemarks String?
  reworkRemarks     String?
  employeeId        Int
  employee          User           @relation(fields: [employeeId], references: [id])
  final             Int            @default(0)
  verifications     Verification[]
}

model Document {
  id             Int          @id @default(autoincrement())
  name           String
  verificationId Int
  verification   Verification @relation(fields: [verificationId], references: [id])
  employeeId     Int
  employee       User         @relation(fields: [employeeId], references: [id])
}
